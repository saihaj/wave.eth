  "scripts": {
    "start:node": "hardhat node",
    "accounts": "hardhat accounts",
    "compile": "hardhat compile && npm run compiled-json",
    "compiled-json": "cp ./artifacts/contracts/WavePortal.sol/WavePortal.json ./src/WavePortal.json",
    "test": "hardhat test",
    "format": "prettier . --write",
    "script": "hardhat run scripts/run.ts",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost && npm run compiled-json",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network rinkeby && npm run compiled-json",
    "dev": "vite",
    "build": "tsc && vite build"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react": "^1.0.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.6.4",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "*",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.4.3",
    "vite": "^2.5.10"
